      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    h1 {
      color: #000;
      font-size: 24px;
      margin-bottom: 20px;
      text-align: center;
      background-image: url('https://raw.githubusercontent.com/BenCizion/Att_self/main/꽃게당 배경 패턴(용량)_6.webp');
      padding: 10px 20px;
      border-radius: 8px;
    }

    .video-board {
      width: 1280px;
      height: 720px;
      background-image: url('https://raw.githubusercontent.com/BenCizion/Att_self/main/꽃게당 배경 패턴(용량)_6.webp');
      padding: 20px;
      border-radius: 12px;
      box-sizing: border-box;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .slide {
      display: none;
      width: 100%;
      height: 100%;
      justify-content: center;
      align-items: center;
      position: absolute;
      top: 0;
      left: 0;
    }
    .slide.active {
      display: flex;
    }
    .slide iframe {
      border: none;
      width: 100%;
      height: 100%;
      border-radius: 12px;
    }
    .prev, .next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0,0,0,0.5);
      color: #fff;
      border: none;
      font-size: 2rem;
      padding: 10px 20px;
      border-radius: 50%;
      cursor: pointer;
      z-index: 2;
    }
    .prev { left: 20px; }
    .next { right: 20px; }

    @media screen and (max-width: 768px) {
      .video-board {
        width: 90%;
        height: auto;
      }
      .slide iframe {
        height: 300px;
      }
    }
